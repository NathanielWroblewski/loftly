//= depend_on_asset "background.jpg"
//= depend_on_asset "StreetscriptRedux.otf"
//= depend_on_asset "StreetscriptRedux.ttf"

html, body {
  margin: 0;
  padding: 0;
  height: 100%;
  width: 100%;
}

@font-face {
  font-family: StreetscriptRedux;
  src: asset-url("StreetscriptRedux.otf") format("opentype");
  src: asset-url("StreetscriptRedux.ttf") format("truetype");
}

#homepage {
  width: 100%;
  height: 100%;
  min-height: 400px;
  position: relative;
  background: url("<%= image_path('background.jpg') %>") no-repeat center;
  -webkit-background-size: cover;
  -moz-background-size: cover;
  -o-background-size: cover;
  -ms-background-size: cover;
  background-size: cover;
}

#logo {
  margin-top: 0;
  padding-top: 200px;
  font-family: StreetscriptRedux;
  font-size: 92px;
  color: white;
  text-shadow: -1px 0 black, 0 1px black, 1px 0 black, 0 -1px black;
}

.centered { text-align: center; }

#scroll {
  position: absolute;
  margin: 0 auto;
  width: 100%;
  color: white;
  bottom: 20px;

  p { margin-bottom: 0; }
}
