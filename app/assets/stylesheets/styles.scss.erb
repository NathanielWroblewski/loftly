//= depend_on_asset "background.jpg"
//= depend_on_asset "StreetscriptRedux.otf"
//= depend_on_asset "StreetscriptRedux.ttf"

html, body {
  margin: 0;
  padding: 0;
  height: 100%;
  width: 100%;
}

p {
  color: #222;
  font-family: 'Kameron', serif;
  font-size: rem-calc(16);
}

@font-face {
  font-family: StreetscriptRedux;
  src: asset-url("StreetscriptRedux.otf") format("opentype");
  src: asset-url("StreetscriptRedux.ttf") format("truetype");
}

h1, h2, h3 {
  color: #222;
  font-family: 'Marcellus', serif;
}

// Navbar //
nav ul {
  margin-top: 10px;

  a { color: rgba(0,0,0,0.3); }

  li {
    display: inline;
    padding-right: 20px;
    margin-bottom: 10px;
    color: #222;
    font-family: 'Kameron', serif;
  }

  .right {
    float: right;
  }
}

// Homepage //

#homepage {
  width: 100%;
  height: 100%;
  min-height: 400px;
  position: relative;
  background: url("<%= image_path('background.jpg') %>") no-repeat center;
  -webkit-background-size: cover;
  -moz-background-size: cover;
  -o-background-size: cover;
  -ms-background-size: cover;
  background-size: cover;
}

#logo {
  margin-top: 0;
  padding-top: 200px;
  font-family: StreetscriptRedux;
  font-size: 92px;
  color: white;
  text-shadow: -1px 0 black, 0 1px black, 1px 0 black, 0 -1px black;
}

#subtitle { color: white; }

.centered { text-align: center; }

#scroll {
  position: absolute;
  margin: 0 auto;
  width: 100%;
  color: white;
  bottom: 20px;

  p {
    margin-bottom: 0;
    color: white;
  }
}

h2 {
  font-family: 'Marcellus', serif;
  font-weight: bold;
  color: #222;
  text-align: center;
  /*border-bottom: 1px solid black;*/
  font-size: rem-calc(56);
}

.divide {
  margin: 0;
  height: 5px;
  background-color: #ddd;
}

.explanation {
  .zero-pad-left {
    padding-left: 0;
  }

  .zero-pad-right {
    padding-right: 0;
  }

  h2 {
    margin-bottom: 40px;
  }

  .step {
    padding-top: 50px;
    height: 325px;

    h1 {
      font-size: rem-calc(72);
    }
  }

  img {
    height: 325px;
    width: 100%;
  }
}

.call-to-action h1 {
  font-size: rem-calc(36);
}

.action-button{
  @include button-base;
  @include button-size;
  @include button-style(#fe1a00);
}

.footer {
  width: 100%;
  background-color: #efefef;
  border-top: 1px solid #dbdbdb;

  .copyright {
    color: #aaa;
  }
}

/* New User Page */

.preferences {
  h1 {
    margin-top: 40px;
    margin-bottom: 20px;
    width: 100%;
    max-width: 100% !important;
  }

  .options {
    min-height: 300px;
    padding-top: 20px;
    width: 100%;
    margin: 0;
    background-color: #efefef;
  }

  .option {
    &:hover {
      opacity: 0.7;
    }

    img {
      width: 100%;
      min-height: 180px;

    }
    p {
      background-color: white;
      border: 1px solid #dbdbdb;
    }
  }

  .preferences-footer {
    min-height: 50px;
    padding-top: 20px;
  }
}
