.row
  .small-10.columns.small-offset-1.centered
    %h1 Set Your Preferences
    %br
.options
  .row
    .small-10.columns.small-offset-1.centered
      .small-12.medium-4.columns.option{data: {bedrooms: '1'}}
        = image_tag '01-bedroom.jpg'
        %p One Bedroom
      .small-12.medium-4.columns.option{data: {bedrooms: '2'}}
        = image_tag '02-bedroom.jpg'
        %p Two Bedroom
      .small-12.medium-4.columns.option{data: {bedrooms: '3'}}
        = image_tag '03-bedroom.jpg'
        %p Three Bedroom
  .row
    .small-10.columns.small-offset-1.centered.prices
      .small-12.medium-6.columns
        %p
          Min Price
          %input{type: 'number', value: @minPrice}
      .small-12.medium-6.columns
        %p
          Max Price
          %input{type: 'number', value: @maxPrice}
.preferences-footer
  .row
    .small-10.columns.small-offset-1.centered
      .button Continue
